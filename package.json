{
  "name": "@plasius/sharedassets",
  "version": "1.0.5",
  "description": "Plasius shared asset library, allowing devs to utilise common components",
  "keywords": [
    "Components",
    "Shared"
  ],
  "main": "./dist-cjs/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "tsc --build && rsync -av --include '*/' --include '*.module.css' --include '*.svg' --exclude '*' src/ dist/ || true && npm run build:cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "clean": "rimraf dist-cjs dist tsconfig.tsbuildinfo",
    "reset:clean": "rm -rf node_modules package-lock.json && npm run clean",
    "audit:ts": "tsc --noEmit --pretty",
    "audit:eslint": "eslint . --max-warnings=0",
    "audit:deps": "npm ls --all --omit=optional --omit=peer > /dev/null 2>&1 || true",
    "audit:npm": "npm audit --audit-level=high --omit=dev",
    "audit:test": "vitest run --coverage",
    "audit:all": "npm-run-all -l audit:ts audit:eslint audit:deps audit:npm audit:test",
    "build:cjs": "tsc -p tsconfig.json --module commonjs --moduleResolution node --outDir dist-cjs --tsBuildInfoFile dist-cjs/tsconfig.tsbuildinfo && rsync -av --include '*/' --include '*.module.css' --include '*.svg' --exclude '*' src/ dist-cjs/ || true && node scripts/write-cjs-package-json.cjs",
    "lint": "eslint . --max-warnings=0",
    "prepare": "npm run build",
    "pack:check": "node scripts/verify-public-package.cjs",
    "prepublishOnly": "npm run build && npm run pack:check"
  },
  "author": "Plasius LTD <development@plasius.co.uk>",
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "ajv": "^6.12.6",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "npm-run-all": "^1.1.3",
    "react": "^19.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18",
    "zod": "^4.0.17"
  },
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist-cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/index.js",
  "files": [
    "dist",
    "dist-cjs",
    "src",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "SECURITY.md",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTORS.md",
    "docs",
    "legal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plasius-LTD/sharedassets.git"
  },
  "bugs": {
    "url": "https://github.com/Plasius-LTD/sharedassets/issues"
  },
  "homepage": "https://github.com/Plasius-LTD/sharedassets#readme",
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://www.patreon.com/c/plasiusltd/membership"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/Plasius-LTD"
    }
  ],
  "engines": {
    "node": ">=22.12"
  },
  "overrides": {
    "minimatch": "^10.2.1"
  }
}
